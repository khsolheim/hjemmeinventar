{
  "name": "HMS - Home Management System",
  "short_name": "HMS",
  "description": "Home Management System - Den enkle måten å holde oversikt over alle dine eiendeler med QR-koder og smart organisering",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "orientation": "any",
  "categories": ["productivity", "utilities", "lifestyle"],
  "lang": "no",
  "scope": "/",
  "id": "hms-home-management",
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512x512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Legg til gjenstand",
      "short_name": "Ny gjenstand",
      "description": "Registrer en ny gjenstand i inventaret",
      "url": "/items/new",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Skann QR-kode",
      "short_name": "Skann QR",
      "description": "Skann QR-kode for å finne gjenstander",
      "url": "/scan",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Søk i inventar",
      "short_name": "Søk",
      "description": "Søk etter gjenstander og lokasjoner",
      "url": "/search",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-desktop.png", 
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "permissions": ["camera", "notifications", "geolocation"],
  "features": [
    "camera",
    "qr-scanner",
    "barcode-scanner", 
    "offline-support",
    "push-notifications",
    "background-sync"
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hms",
      "url": "/scan?code=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
