{
  "crons": [
    {
      "path": "/api/notifications/jobs?type=all",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/notifications/jobs?type=expiry",
      "schedule": "0 8,20 * * *"
    },
    {
      "path": "/api/notifications/jobs?type=loans",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/notifications/jobs?type=stock",
      "schedule": "0 12 * * MON"
    }
  ],
  "env": {
    "NEXT_PUBLIC_VAPID_PUBLIC_KEY": "@vapid_public_key",
    "VAPID_PRIVATE_KEY": "@vapid_private_key",
    "CRON_SECRET": "@cron_secret"
  }
}